<div class="right_col" role="main" style="min-height: 683px;">
  <div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Hồ sơ cá nhân
            </h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <form class="form-horizontal form-label-left" novalidate="">
              <span class="section">Thông tin</span>
              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Avatar
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                      <div class="profile_img">
                        <div id="crop-avatar">
                          <!-- Current avatar -->
                          <img title="Change the avatar" class="img-responsive avatar-view" alt="Avatar" src="/images/user.png">
                        </div>
                      </div>
                </div>
              </div>           
              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Họ tên
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input name="name" class="form-control col-md-7 col-xs-12" id="name" type="text" placeholder="Read-Only Input" readonly="readonly"
                    data-validate-words="2" data-validate-length-range="6">
                </div>
              </div>
              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Email
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input name="email" class="form-control col-md-7 col-xs-12" id="email" type="email" readonly="readonly">
                </div>
              </div>
              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="gender">Giới tính
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input name="gender" class="form-control col-md-7 col-xs-12" id="gender" type="email" readonly="readonly">
                </div>
              </div>
              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Ngày sinh
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input class="date-picker form-control col-md-7 col-xs-12" id="birthday" type="text" readonly="readonly">
                </div>
              </div>
              <div class="item form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="textarea">Địa chỉ
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <textarea name="address" class="form-control col-md-7 col-xs-12" id="textarea" readonly="readonly"></textarea>
                </div>
              </div>
              
              <div class="ln_solid"></div>
              <div class="form-group">
                <div class="col-md-6 col-md-offset-3">
                  <button class="btn btn-primary" type="submit">Đổi mật khẩu</button>
                  <button class="btn btn-success" id="send" type="submit"><a href="/user/change-profile">Đổi thông tin</a></button>
