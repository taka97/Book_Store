<div class="container">
  <div class="row">
    <div class="main_content sidebar_on col-sm-9 col-sm-push-3">
      <div id="shopify-section-template-collection" class="shopify-section section_template section_template__collection">

        <div class="product_options">
          <ul class="product_view">
            <li id="view_grid" data-view="grid" class="active">
              <i class="fa fa-th" aria-hidden="true"></i>
            </li>
            <li id="view_list" data-view="list">
              <i class="fa fa-th-list" aria-hidden="true"></i>
            </li>
          </ul>
          <div class="product_options__sort">
            <label for="sort_by_select">Sort products:</label>
            <select id="sort_by_select">
              <option value="manual">Featured</option>
              <option value="best-selling">Best Selling</option>
              <option value="title-ascending">Name: A – Z</option>
              <option value="title-descending">Name: Z – A</option>
              <option value="price-ascending">Price: low to high</option>
              <option value="price-descending">Price: high to low</option>
              <option value="created-ascending">Oldest to newest</option>
              <option value="created-descending">Newest to oldest</option>
            </select>
          </div>
          <div class="product_options__number">
            <label for="products_number_select">Show:</label>
            <select id="products_number_select">
              <option value="3">3</option>
              <option value="6">6</option>
              <option value="9">9</option>
              <option value="12">12</option>
            </select>
          </div>
          <div class="clearfix"></div>
        </div>
        <script>
          // theme.paginationCurrent = 1
          theme.productNumber = 6;
        </script>
        <div class="row product_listing__main" id="product_listing__sorted">
          {{#if listBooks}} {{#each listBooks}}
          <div class="col-sm-4 max-height-470">
            <div class="product_item">
              <div class="product_img">
                <a class="img_change" href="{{ url }}">
                  <img class="img" src="{{ imageCover }}" alt="{{ title }}">
                  <span class="product_badge new">New!</span>
                  <span class="product_badge sale">–23%</span>
                </a>
                <a class="quick_view_btn" title="Quick view">
                  <i class="fa fa-eye" aria-hidden="true"></i>
                </a>
              </div>
              <div class="product_info">
                <p class="product_name">
                  <a href="{{ url }}"> {{ title}} </a>
                </p>
                <p class="product_desc product_desc__short"> {{ description }} </p>
                <p class="product_desc product_desc__long"> {{ description }} </p>
                <p class="product_price">
                  <span class="money"> {{ price }}</span>
                  <span class="currency"> ₫</span>
                  <span class="money money_sale">{{ price }}</span>
                  <span class="currency"> ₫</span>
                </p>
                <div class="product_links">
                  <form method="post" action="/cart/add-to-cart">
                    <input type="hidden" name="product_id" value="{{ _id }}">
                    <a class="btn btn_options"> Thêm vào giỏ hàng </a>
                  </form>
                  <a class="btn wishlist_add_login" href="/pages/wishlist" title="Add to the wishlist">
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                  </a>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
          {{/each}} {{else}}
          <h2>Không có dữ liệu!</h2>
          {{/if}}
        </div>
        <div class="pagination">
          <p>1 – 6 product(s) of 10</p>
          <ul>
            <li class="pagination_prev">
              <span>
                <i class="fa fa-angle-left" aria-hidden="true"></i>Previous</span>
            </li>
            <li class="pagination_current">
              <span>1</span>
            </li>
            <li>
              <a href="/collections/belles-lettres?page=2">2</a>
            </li>
            <li class="pagination_next">
              <a href="/collections/belles-lettres?page=2">Next
                <i class="fa fa-angle-right" aria-hidden="true"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-3 col-sm-pull-9">
      <div id="shopify-section-sidebar" class="shopify-section page_sidebar">
        <div class="sidebar">
          <div class="sidebar_widget sidebar_widget__collections">
            <h3 class="widget_header">Thể loại</h3>
            <div class="widget_content">
              <ul class="list_links">
                {{#each listGenres}}
                <li>
                  <a class="" href={{url}}>{{name}}</a>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class="sidebar_widget sidebar_widget__types">
            <h3 class="widget_header">Tác giả</h3>
            <div class="widget_content">
              <ul class="list_links">
                {{#each listAuthors}}
                <li>
                  <a href={{url}}>{{name}}</a>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class="sidebar_widget sidebar_widget__vendors">
            <h3 class="widget_header">Nhà xuất bản</h3>
            <div class="widget_content">
              <ul class="list_links">
                {{#each listPublishers}}
                <li>
                  <a href={{url}}>{{name}}</a>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>