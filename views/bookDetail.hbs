                        <div class="swiper-wrapper" style="transform: translate3d(0px, 0px, 0px); transition-duration: 0ms;">
                            {{!-- {{#each bookDetail.imageCover}} --}}
                            <div class="swiper-slide swiper-slide-next" style="width: 470px;">
                                <img src={{ bookDetail.imageCover.[0] }} alt="">
                            </div>
                            {{!-- {{/each}} --}}
                        </div>
                        <div id="prev_template-product" class="swiper_btn swiper_btn__prev swiper-button-disabled"></div>
                        <div id="next_template-product" class="swiper_btn swiper_btn__next"></div>
                    </div>
                    <div id="gallery_thumbs-template-product" class="gallery_thumbs gallery_thumbs__medium swiper-container swiper-container-horizontal">
                        <div class="swiper-wrapper" style="transform: translate3d(196px, 0px, 0px); transition-duration: 0ms;">
