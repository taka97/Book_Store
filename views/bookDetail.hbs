                            <div class="swiper-slide swiper-slide-active" style="width: 78px; margin-right: 20px;">
                                <img src={{ this }} alt="">
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <div class="single_product__info col-xs-6 medium">
                    {{#with bookDetail}}
                    <h2 class="single_product__title">{{ book.title }}</h2>
                    <div class="single_product__details">
                        <form action="/cart/add-to-cart" method="post" data-section="template-product">
                            <div class="details_separator"></div>
                            <div class="details_wrapper">
                                <div class="details_left">
                                    <p class="single_product__author">
                                        <b>Tác giả:</b>
                                        <span id="single_product__author-template-product">{{ book.author.name }}</span>
                                    </p>
                                    <p class="single_product__collections">
                                        <b>Thể loại:</b>
                                        <a href="{{ book.genre.url }}">{{ book.genre.name }}</a>,
                                    </p>
                                    <p class="single_product__size">
                                        <b>Kích thước:</b>
                                        <span>{{ size.[0] }} x {{ size.[1] }} cm </span>
                                    </p>
                                    <p class="single_product__type">
                                        <b>Kiểu bìa:</b>
                                        <span> {{ coverType }} </span>
                                    </p>
                                    <p class="single_product__vendor">
                                        <b>Nhà xuất bản:</b>
                                        <span>{{ book.publisher.name }}</span>
                                    </p>
                                    <p class="single_product__date">
                                        <b>Ngày xuất bản:</b>
                                        <span formatdate>{{ book.publishDate }}</span>
                                    </p>
                                </div>
                                <div class="details_right">
                                    <p class="single_product__availability">
                                        <b>Tình trạng:</b>
                                        <span id="single_product__availability-template-product" class="notify_success">{{ status }}</span>
                                    </p>
                                    <p class="single_product__price">
                                        <span id="single_product__price-template-product">
