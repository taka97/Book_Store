									<span class="money" data-currency-usd="$20.00">$20.00</span>
									<span class="money_like">–</span>
									<span class="money" data-currency-usd="$24.00">$24.00</span>
									<span class="money_variants">(4 variants)</span>
								</p>
								<div class="product_links">
									<form method="post" action="/cart/add">
										<a class="btn btn_options" href="/products/the-adventure-collection">Choose variant</a>
									</form>
									<a class="btn wishlist_add_login" href="/pages/wishlist" title="Add to the wishlist">
										<i class="fa fa-heart-o" aria-hidden="true"></i>
									</a>
								</div>
							</div>
							<div class="clearfix"></div>
						</div>
					</div>
					{{# each listBooks}}
					<div class="col-xs-3 item_4_1 item_2_1">
						<div class="product_item">
							<div class="product_img">
								<a class="img_change" href={{url}}>
									<img class="img__1" src={{imageCover}} alt={{title}}>
									<img class="img__2" src={{imageCover}} alt={{title}}>
									<span class="product_badge new">New!</span>
								</a>
								<a class="quick_view_btn" href={{url}} title="Quick view">
									<i class="fa fa-eye" aria-hidden="true"></i>
								</a>
							</div>
							<div class="product_info">
								<p class="product_name">
									<a href={{url}}>{{title}}</a>
								</p>
