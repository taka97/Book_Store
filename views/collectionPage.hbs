									<div class="product_img">
										<a href={{url}}>
											<img src={{imageCover}} alt={{tittle}}>
										</a>
									</div>
									<div class="product_info">
										<div class="product_name">
											<a href={{url}}>{{tittle}}</a>
										</div>
										<div class="product_price">
											<span class="money" data-currency-usd="${{price}}">${{price}}</span>
										</div>
										<div class="product_links">
