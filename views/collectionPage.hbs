									<span class="money" data-currency-usd="{{price}}">$price</span>
								</p>
								<div class="product_links">
									<form method="post" action="/cart/add">
										<input type="hidden" name="id" value="50971280395">
										<button class="btn btn-cart" type="submit">Add to cart</button>
									</form>
									<a class="btn wishlist_add_login" href="/pages/wishlist" title="Add to the wishlist">
										<i class="fa fa-heart-o" aria-hidden="true"></i>
									</a>
								</div>
							</div>
							<div class="clearfix"></div>
						</div>
					</div>
