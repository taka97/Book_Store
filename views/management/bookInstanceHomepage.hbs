<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2> Quản lý sản phẩm
              <small> Thêm, sửa, xóa, tìm kiếm </small>
            </h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th> STT </th>
                  <th> Tên sách </th>
                  <th> Giá (gốc) </th>
                  <th> Tổng số lượng </th>
                  <th> Hành động </th>
                </tr>
              </thead>
              <tbody>
                {{#each listBooks}}
                <tr>
                  <th> 1 </th>
                  <th> {{book.title}} </th>
                  <th> {{currentPrice}}</th>
                  <th> {{currentTotalQuantity}} </th>
                  <td>
                    <a href="/admin/bookinstance/view/{{_id}}" class="btn btn-primary btn-xs">
                      <i class="fa fa-folder"></i> Xem </a>
                    <a href="/admin/bookinstance/edit/{{_id}}" class="btn btn-info btn-xs">
                      <i class="fa fa-pencil"></i> Sửa </a>
                    <a href="/admin/bookinstance/delete/{{_id}}" class="btn btn-danger btn-xs">
                      <i class="fa fa-trash-o"></i> Xóa </a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->

<!-- add button -->
<a id="add_button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="" 
data-original-title="Thêm sản phẩm" href="/admin/bookinstance/add">
  <i class="fa fa-plus" aria-hidden="true" style="line-height: inherit;"></i>
</a>
<!-- /add content -->