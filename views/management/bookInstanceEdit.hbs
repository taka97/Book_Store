<!-- page content -->
<div class="right_col" role="main" style="min-height: 958px;">
    <div>
        <div class="page-title">
            <div class="title_left">
                <h3>Sửa sản phẩm</h3>
            </div>            
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">

                        <form class="form-horizontal form-label-left" novalidate="">
                            {{# bookinstance}}
                            <span class="section">Thông tin sản phẩm</span>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Tên sản phẩm
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="name" class="form-control col-md-7 col-xs-12" id="name" required="required" type="text" value="{{book.title}}"
                                        data-validate-words="2" data-validate-length-range="6">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="price">Giá
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="price" class="form-control col-md-7 col-xs-12" id="price" required="required" type="text" value="{{currentPrice}}">
                                </div>
                            </div>
                            <div class="item form-group">
                               <label class="control-label col-md-3 col-sm-3 col-xs-12" for="total">Tổng số lượng
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="total" class="form-control col-md-7 col-xs-12" id="total" required="required" type="text" value="{{currentTotalQuantity}}">
                                </div>
                            </div>
                            <div class="item form-group">
                               <label class="control-label col-md-3 col-sm-3 col-xs-12" for="size">Kích thước
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="size" class="form-control col-md-7 col-xs-12" id="size" required="required" type="text" value="{{size.[0]}},{{size.[1]}}">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="coverType">Loại bìa
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select name="coverType" class="form-control" required="" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Chọn loại bìa')">
                                        <option selected disabled> Loại bìa sản phẩm </option>
                                        <option value="hardcover"> Bìa cứng </option>
                                        <option value="softcover"> Bìa mềm</option>
                                    </select></div>
                            </div>
                            <div class="item form-group">
                                 <label class="control-label col-md-3 col-sm-3 col-xs-12" for="status">Tình trạng
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select name="status" class="form-control" required="" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Chọn giới tính')">
                                        <option selected disabled> Tình trạng sản phẩm </option>
                                        <option value="exist"> Còn hàng </option>
                                        <option value="notexist"> Hết hàng</option>
                                    </select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" class="btn btn-primary" for="avatar">Ảnh trước
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="col-md-6 col-sm-3 col-xs-12">
                                        <div class="profile_img">
                                            <div id="crop-avatar">
                                                <!-- Current avatar -->
                                                <img name="imageCover" id="imageCover" title="Change the image" required="required" class="img-responsive avatar-view" alt="image"
                                                    src="{{imageCover.[0]}}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-3 col-xs-12" id="imageCover">
                                        <button class="imageCover" class="btn btn-success btn btn-primary" type="submit">Chọn ảnh </button>
                                    </div>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" class="btn btn-primary" for="image">Ảnh sau
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="col-md-6 col-sm-3 col-xs-12">
                                        <div class="profile_img">
                                            <div id="crop-avatar">
                                                <!-- Current avatar -->
                                                <img name="imageCover" id="imageCover" title="Change the image" required="required" class="img-responsive avatar-view" alt="image"
                                                    src="{{imageCover.[1]}}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-3 col-xs-12" id="imageCover">
                                        <button class="imageCover" class="btn btn-success btn btn-primary" type="submit">Chọn ảnh </button>
                                    </div>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <button class="btn btn-primary" type="submit">Cancel</button>
                                    <button class="btn btn-success" id="send" type="submit">Submit</button>
                                </div>
                            </div>
                            {{/bookinstance}}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page content -->