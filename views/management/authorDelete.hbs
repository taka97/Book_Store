<!-- page content -->
<div class="right_col" role="main" style="min-height: 1134px;">
    <div>
        <div class="page-title">
            <div class="title_left">
                <h3> Xoá tác giả </h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Thông tin tác giả </h2>
                        <div class="clearfix"></div>
                    </div>
                    <form class="form-horizontal form-label-left">
                        {{#author}}
                        <div class="form-group row">
                            <label for="description" class="col-sm-2 control-label"> Họ tên </label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="name" value="{{name}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="genre" class="col-sm-2 control-label"> Ngày sinh </label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="date" value="{{birthDate}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="genre" class="col-sm-2 control-label"> Giới tính </label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="gender" value="{{gender}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="description" class="col-sm-2 control-label">Quốc tịch </label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="name" value="{{nationality}}">
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-3">
                                <button type="submit" class="btn btn-success"> Xóa tác giả </button>
                            </div>
                        </div>
                        {{/author}}
                    </form>
                </div>
                {{#if length}}                
                <div class="x_content">
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th> STT </th>
                                <th> Tên sách </th>
                                <th> Nhà xuất bản </th>
                                {{!--
                                <th> Ngày xuất bản </th> --}}
                                <th> Giá </th>
                                {{!--
                                <th> Ảnh bìa </th> --}}
                                <th> Hành động </th>
                            </tr>
                        </thead>
                        {{#each listBooksAuthor}}
                        <tbody>
                            <tr>
                                <th> 1 </th>
                                <th> {{title}} </th>
                                <th> {{publisher.name}} </th>
                                {{!--
                                <th> 10/06/2018 </th> --}}
                                <th> {{price}} </th>
                                {{!--
                                <th>
                                    <img class="thumbnail image" src="http://gralib.hcmuns.edu.vn/sachmoi/2015/05-15/ktlaptrinh.jpg"
                                        alt=""> </th> --}}
                                <td>
                                    <a href="admin/book/edit/{{_id}}" class="btn btn-primary btn-xs">
                                        <i class="fa fa-folder"></i> Xem </a>
                                    <a href="/author/ho-van-hoang" class="btn btn-info btn-xs">
                                        <i class="fa fa-pencil"></i> Sửa </a>
                                    <a href="/author/ho-van-hoang" class="btn btn-danger btn-xs">
                                        <i class="fa fa-trash-o"></i> Xóa </a>
                                </td>
                            </tr>
                        </tbody>
                        {{/each}}
                    </table>
                </div>                
                {{/if}}
            </div>
        </div>
    </div>
</div>
<!-- page content -->