<!-- page content -->
<div class="right_col" role="main" style="min-height: 1134px;">
    <div>
        <div class="page-title">
            <div class="title_left">
                <h3> Xoá nhà xuất bản </h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Thông tin nhà xuất bản </h2>
                        <div class="clearfix"></div>
                    </div>
                    <form action="" method="POST" class="form-horizontal form-label-left">
                        <div class="form-group row">
                            <label for="description" class="col-sm-2 control-label"> Tên nhà xuất bản </label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext" id="name" value="{{publisher.name}}">
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                        {{#if hasBook}} 
                        {{else}}
                        <div class="form-group">
                            <div class="col-md-4 col-md-offset-3">
                                <button type="submit" class="btn btn-success"> Xóa nhà xuất bản </button>
                            </div>
                        </div>
                        {{/if}}
                    </form>
                    {{#if hasBook}}
                    <div>Bạn phải xoá những sách của nhà sản xuất trước!</div>
                    {{/if}}
                </div>
            </div>
            {{#if hasBook}}   
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Danh sách các cuốn sách cần xóa </h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th> STT </th>
                                    <th> Tên sách </th>
                                    <th> Nhà xuất bản </th>
                                    <th> Giá </th>
                                    <th> Hành động </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each listBooksAuthor}}
                                <tr>
                                    <th> {{@index}} </th>
                                    <th> {{title}} </th>
                                    <th> {{publisher.name}} </th>
                                    <th> {{price}} </th>
                                    <td>
                                        <a href="admin/book/edit/{{_id}}" class="btn btn-primary btn-xs">
                                            <i class="fa fa-folder"></i> Xem </a>
                                        <a href="/admin/book/edit/{{_id}}" class="btn btn-info btn-xs">
                                            <i class="fa fa-pencil"></i> Sửa </a>
                                        <a href="/admin/book/delete/{{_id}}" class="btn btn-danger btn-xs">
                                            <i class="fa fa-trash-o"></i> Xóa </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>
<!-- page content -->