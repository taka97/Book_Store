<!-- page content -->
<div class="right_col" role="main">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> {{ title }} </h2>
                <div class="clearfix"></div>
            </div>
            <form action="" method="POST" class="form-horizontal form-label-left">
                <div class="form-group row">
                    <label for="name" class="col-sm-2 control-label"> Tên sách </label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="name" value="{{ book.title }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="author" class="col-sm-2 control-label"> Tác giả </label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="author" value="{{ book.author.name }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="genre" class="col-sm-2 control-label"> Thể loại </label>
                    <div class="col-sm-7">
                        <input type="text" readonly class="form-control-plaintext" id="genre" value="{{ book.genre.name }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="price" class="col-sm-2 control-label"> Giá </label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext money" id="price" value="{{ book.price }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="publisher" class="col-sm-2 control-label"> Nhà xuất bản </label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="publisher" value="{{ book.publisher.name }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="publishDate" class="col-sm-2 control-label"> Ngày xuất bản </label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext formatdate" id="publishDate" value="{{ book.publishDate }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-sm-2 control-label"> Mô tả </label>
                    <div class="col-sm-10">
                        <textarea readonly class="form-control-plaintext padding-left-0" id="description" rows="5">{{ book.description }}</textarea>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"> {{#if hasBookInstance}} {{else}}
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-3">
                        <button type="submit" class="btn btn-success"> Xóa sách </button>
                    </div>
                </div>
                {{/if}}
            </form>
            {{#if hasBookInstance}}
            <div>Bạn phải xoá những sản phẩm của cuốn sách này trước!</div>
            {{/if}}
        </div>
    </div>
    {{#if hasBookInstance}}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> Danh sách các sản phẩm cần xóa </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th> STT </th>
                            <th> Tên sách </th>
                            <th> Số lượng hiện tại </th>
                            <th> Giá hiện tại </th>
                            <th> Loại bìa </th>
                            <th> Tình trạng </th>
                            <th> Hành động </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each listInstancesOfBook}}
                        <tr>
                            <td> {{@index}} </td>
                            <td> {{ book.title }} </td>
                            <td> {{ currentTotalQuantity }} </td>
                            <td class="money"> {{ currentPrice }} </td>
                            <td> {{ coverType }} </td>
                            <td> {{ status }} </td>
                            <td>
                                <a href="/admin/bookinstance/view/{{_id}}" class="btn btn-primary btn-xs">
                                    <i class="fa fa-folder"></i> Xem </a>
                                <a href="/admin/bookinstance/edit/{{_id}}" class="btn btn-info btn-xs">
                                    <i class="fa fa-pencil"></i> Sửa </a>
                                <a href="/admin/bookinstance/delete/{{_id}}" class="btn btn-danger btn-xs">
                                    <i class="fa fa-trash-o"></i> Xóa </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{/if}}
</div>
<!-- page content -->