<!-- page content -->
<div class="right_col" role="main" style="min-height: 958px;">
    <div>
        <div class="page-title">
            <div class="title_left">
                <h3>Thêm sản phẩm</h3>
            </div>            
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <form method="POST" action="" class="form-horizontal form-label-left" novalidate="">
                            <span class="section">Thông tin sản phẩm</span>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Tên sản phẩm
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">                                    
                                    <select name="name" class="form-control col-md-7 col-xs-12" id="nameAuthor">
                                        {{#each books}}
                                        <option value="{{_id}}">{{title}}</option>           
                                        {{/each}}                             
                                    </select>                                    
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="price">Giá
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="price" class="form-control col-md-7 col-xs-12" id="price" required="required" type="text" placeholder="50000">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="total">Tổng số lượng
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="total" class="form-control col-md-7 col-xs-12" id="total" required="required" type="text" placeholder="5">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="size">Kích thước
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="size" class="form-control col-md-7 col-xs-12" id="size" required="required" type="number" placeholder="15,21">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="coverType">Loại bìa
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select name="coverType" class="form-control" required="" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Chọn loại bìa')">
                                        <option selected disabled> Loại bìa sản phẩm </option>
                                        <option value="exist"> Bìa cứng </option>
                                        <option value="notexist"> Bìa mềm</option>
                                    </select></div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="status">Tình trạng
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select name="status" class="form-control" required="" oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Chọn giới tính')">
                                        <option selected disabled> Tình trạng sản phẩm </option>
                                        <option value="exist"> Còn hàng </option>
                                        <option value="notexist"> Hết hàng</option>
                                    </select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" class="btn btn-primary" for="avatar">Ảnh
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="col-md-6 col-sm-3 col-xs-12">
                                        <div class="profile_img">
                                            <div id="crop-avatar">
                                                <!-- Current avatar -->
                                                <img name="avatar" id="avatar" title="Change the avatar" required="required" class="img-responsive avatar-view" alt="Avatar"
                                                    src="/images/user.png">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-3 col-xs-12" id="imageCover">
                                        <button class="imageCover" class="btn btn-success btn btn-primary" type="submit">Chọn ảnh </button>
                                    </div>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <button class="btn btn-primary" type="submit">Cancel</button>
                                    <button class="btn btn-success" id="send" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page content -->