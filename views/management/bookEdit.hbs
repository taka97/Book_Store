<!-- page content -->
<div class="right_col" role="main" style="min-height: 958px;">
    <div>
        <div class="page-title">
            <div class="title_left">
                <h3>Sửa sách</h3>
            </div>            
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        {{# book}}
                        <form action="" class="form-horizontal form-label-left" novalidate="" method="POST">                            
                            <span class="section">Thông tin sách</span>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Tên sách
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="name" class="form-control col-md-7 col-xs-12" id="name" required="required" type="text" value="{{title}}"
                                        data-validate-words="2" data-validate-length-range="6">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nameAuthor">Tác giả
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="nameAuthor" class="form-control col-md-7 col-xs-12" id="nameAuthor" required="required" type="text" value="{{author.name}}">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="genre">Thể loại
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="genre" class="form-control col-md-7 col-xs-12" id="genre" required="required" type="text" data-validate-linked="email" value="{{genre.name}}">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="price">Giá
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="price" class="form-control col-md-7 col-xs-12" id="price" required="required" type="number" value="{{price}}" data-validate-minmax="20000,1000000">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="namePublisher">Nhà sản xuất
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="namePublisher" class="form-control col-md-7 col-xs-12" id="namePublisher" required="required" type="text" value="{{publisher.name}}">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="date">Ngày sản xuất
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="date" class="optional form-control col-md-7 col-xs-12" id="occupation" type="datetime" value="{{publishDate}}" data-validate-length-range="5,20">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="description">Giới thiệu
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input name="description" class="form-control col-md-7 col-xs-12" id="description" required="required" type="text" data-validate-linked="email" value="{{description}}">
                                </div>
                            </div>
